<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >





    <RelativeLayout
        android:id="@+id/rl_one_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:src="@drawable/paynextlogo" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/mytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="75sp">

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lasttran"
                android:textSize="25sp"
                android:layout_marginLeft="15sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:textColor="@color/darkblue"
                android:text="Transaction Count">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/mytext3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mytext"
            android:orientation="vertical"
           >

            <View
                android:layout_marginTop="10sp"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#D5D8DC"/>
            <Button
                android:id="@+id/top10"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="25sp"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="right"
                android:text="View Top 10"
                android:gravity="center"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:layout_marginRight="100sp"
                android:layout_marginLeft="100sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/top10"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/lin_card2"
            android:layout_below="@+id/mytext3"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="visible"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one_login"

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_marginTop="100px"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                card_view:cardElevation="10dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                </LinearLayout>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/day"
                    android:background="@color/darkblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="5sp"
                    android:layout_marginBottom="20dp"
                    android:text="Today"/>


                <TextView
                    android:id="@+id/count"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:layout_marginRight="10sp"
                    android:paddingLeft="25sp"
                    android:paddingTop="8sp"
                    android:textSize="20sp"
                    android:text="Count: "
                    android:textColor="@color/darkblue"/>


                <TextView
                    android:id="@+id/todaydate"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginRight="10sp"
                    android:paddingLeft="25sp"
                    android:paddingTop="8sp"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:textSize="13sp"
                    android:text="Date: "
                    android:textColor="#000000"/>


                <TextView
                    android:id="@+id/amount"
                    android:paddingTop="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:gravity="center"
                    android:layout_marginRight="20sp"
                    android:text="Amount: "
                    android:textSize="20sp"
                    android:paddingLeft="25sp"

                    android:textColor="@color/darkblue"/>





            </androidx.cardview.widget.CardView>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/lin_card3"
            android:layout_below="@+id/lin_card2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="visible"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_two_login"

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_marginTop="100px"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                card_view:cardElevation="10dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                </LinearLayout>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/yesterday"
                    android:background="@color/darkblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="5sp"
                    android:layout_marginBottom="20dp"
                    android:text="Yesterday"/>


                <TextView
                    android:id="@+id/countyes"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:layout_marginRight="10sp"
                    android:paddingLeft="25sp"
                    android:paddingTop="8sp"
                    android:textSize="20sp"
                    android:text="Count: "
                    android:textColor="@color/darkblue"/>
                <TextView
                    android:id="@+id/yesterdaydate"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginRight="10sp"
                    android:paddingLeft="25sp"
                    android:paddingTop="8sp"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:textSize="13sp"
                    android:text="Date: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/amountyes"
                    android:paddingTop="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:gravity="center"
                    android:layout_marginRight="20sp"
                    android:text="Amount: "
                    android:textSize="20sp"
                    android:paddingLeft="25sp"

                    android:textColor="@color/darkblue"/>





            </androidx.cardview.widget.CardView>


        </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        android:elevation="15dp"
        android:gravity="center">


    </LinearLayout>

    <TextView
        android:id="@+id/TextViewBottomVersion"
        android:text="PayNext Pvt Ltd"
        android:textSize="15sp"
        android:paddingBottom="5sp"
        android:textColor="@color/year"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center">

    </TextView>




</RelativeLayout>