<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <RelativeLayout
        android:id="@+id/rl_one_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <View
            android:id="@+id/v_one_login"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/pay" />

        <RelativeLayout
            android:id="@+id/rl_two_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp">

            <TextView
                android:id="@+id/tv_one_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merchant App"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_one_login"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_one_login"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:layout_marginTop="100px"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcfcfc"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            card_view:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="65px"
                    android:layout_marginTop="100px"
                    android:layout_marginRight="65px"
                    android:digits="0123456789"
                    android:gravity="center_horizontal"
                    android:hint="Username"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@color/title"
                    app:backgroundTint="#fff" />

                <EditText

                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="65px"
                    android:layout_marginTop="100px"
                    android:layout_marginRight="65px"
                    android:gravity="center_horizontal"
                    android:hint="Password"
                    android:inputType="numberPassword"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@color/title"
                    app:backgroundTint="#fff" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85px"
                    android:layout_marginTop="100px"
                    android:layout_marginRight="85px"
                    android:layout_marginBottom="30px"
                    android:background="@drawable/custom_circle"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="#fff"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="30px"
                    android:text="Forget Password?"
                    android:textColor="@color/title" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        android:elevation="15dp"
        android:gravity="center">


    </LinearLayout>

    <TextView
        android:id="@+id/TextViewBottomVersion"
        android:text="PayNext Pvt Ltd"
        android:textSize="15sp"
        android:paddingBottom="5sp"
        android:textColor="@color/year"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center">

    </TextView>



</RelativeLayout>